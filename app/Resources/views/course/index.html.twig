{% extends 'base.html.twig' %}

{% block body %}
    <h1>Courses list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Duration</th>
                <th>Likes</th>
                <th>Sponsored</th>
                <th>Author</th>
                <th>Origin</th>
                <th>Firststage</th>
                <th>Secondstage</th>
                <th>Thirdstage</th>
                <th>Fourthstage</th>
                <th>Fifthstage</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td><a href="{{ path('course_show', { 'id': course.id }) }}">{{ course.id }}</a></td>
                <td>{{ course.name }}</td>
                <td>{{ course.duration }}</td>
                <td>{{ course.likes }}</td>
                <td>{% if course.sponsored %}Yes{% else %}No{% endif %}</td>
                <td>{{ course.author }}</td>
                <td>{{ course.origin }}</td>
                <td>{{ course.firstStage }}</td>
                <td>{{ course.secondStage }}</td>
                <td>{{ course.thirdStage }}</td>
                <td>{{ course.fourthStage }}</td>
                <td>{{ course.fifthStage }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('course_show', { 'id': course.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('course_edit', { 'id': course.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('course_new') }}">Create a new course</a>
        </li>
    </ul>
{% endblock %}
